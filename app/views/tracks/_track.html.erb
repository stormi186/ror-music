<tr>
  <td><%= link_to track.name, track_path(track) %></td>
  <td><%= track.duration %></td>
  <td><%= track.genre.name %></td>
  <td><%= track.artist.name %></td>
  <td><%= track.album.name %></td>
  <td>
  <div class="btn-group">
  		<%= link_to "favorite",   favorites_path(@track, type: "favorite"), method: :put %>
  		<%= link_to "unfavorite", favorites_path(@track, type: "unfavorite"), method: :put %>
    <%= link_to 'Edit', edit_track_path(track), class: 'btn btn-sm btn-primary' %>
    <%= link_to 'Delete', track_path(track), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger' %>
    </div>
  </td>
</tr>
