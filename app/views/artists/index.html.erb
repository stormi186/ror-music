<div class="row">
  <div class="col-md-4">
    <h1>Artists</h1>
    <hr>

    <% unless flash[:notice].blank? %>
      <div class="alert alert-success">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>
    <div class="table-responsive-vertical">
    	<table class="table table-hover">
      	<tbody>
        	<%= render @artists %>
      	</tbody>
    	</table>
  	</div>
  	<%= will_paginate @artists, renderer: BootstrapPagination::Rails %>
	</div>
</div>
