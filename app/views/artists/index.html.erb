<div class="row">
  <div class="col-md-7">
    <h1>Artists</h1>

    <% unless flash[:notice].blank? %>
      <div class="alert alert-success">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>
    
    <%= will_paginate @albums, renderer: BootstrapPagination::Rails %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        <%= render @artists %>
      </tbody>
    </table>
  </div>
</div>
