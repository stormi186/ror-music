<div class="section">
  <div class="col-md-7">
    <h1>Artists <%= link_to 'Create new', new_superadmin_artist_path, class: 'btn btn-success' %></h1>
    <hr>

    <% unless flash[:notice].blank? %>
      <div class="alert alert-success">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>

		<div class="table-responsive-vertical">
      <table class="table table-hover">
      	<thead>
        	<tr>
          	<th>Name</th>
          	<th>Actions</th>
        	</tr>
      	</thead>
      	<tbody>
        	<%= render @artists %>
      	</tbody>
    	</table>
  	</div>
  	<%= will_paginate @artists, renderer: BootstrapPagination::Rails %>
  </div>
</div>
