<div class="section">
  <div class="col-md-9">
    <h1> Tracks <%= link_to 'Create new', new_superadmin_track_path, class: 'btn btn-success' %></h1>
    <hr>

    <% unless flash[:notice].blank? %>
      <div class="alert alert-success">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>

		<div class="table-responsive-vertical">
      <table class="table table-hover">
      	<thead>
        	<tr>
          	<th>Name</th>
          	<th>Duration</th>
          	<th>Genre</th>
          	<th>Artist</th>
          	<th>Album</th>
          	<th>Actions</th>
        	</tr>
      	</thead>
      	<tbody>
        	<%= render @tracks %>
      	</tbody>
    	</table>
    </div>
    <%= will_paginate @tracks, renderer: BootstrapPagination::Rails %>
  </div>
</div>
