<%= form_for [:superadmin, @track] do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, class: 'form-control' %>
  <%= error_for :name, @track.errors %>
  <br>
  <%= form.label :duration, 'Track duration' %>
  <%= form.text_area :duration, class: 'form-control' %>
  <%= error_for :duration, @track.errors %>
  <br>
  <%= form.label :album_id, 'Artist and album' %>
  <%= form.grouped_collection_select :album_id, Artist.order(:name), :albums, :name, :id, :name, { prompt: 'Choose album' }, class: 'form-control' %>
  <br>
  <%= form.label :youtubelink, 'Youtube link' %>
  <%= form.text_area :youtubelink, class: 'form-control' %>
  <%= error_for :youtubelink, @track.errors %>
  <br>
  <%= form.submit params[:action] == 'new' ? 'Save' : 'Update', class: 'btn btn-block btn-primary' %>
<% end %>
