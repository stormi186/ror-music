<%= form_for [:superadmin, @track] do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, class: 'form-control' %>
  <%= error_for :name, @track.errors %>
  <br>
  <%= form.label :duration, 'Track duration' %>
  <%= form.text_area :duration, class: 'form-control' %>
  <%= error_for :duration, @track.errors %>
  <br>
  <%= form.label :genre_id %>
  <%= form.collection_select :genre_id, Genre.all, :id, :name, { prompt: 'Choose genre' }, class: 'form-control' %>
  <%= error_for :genre, @track.errors %>
  <br>
  <%= form.label :artist_id %>
  <%= form.collection_select :artist_id, Artist.all, :id, :name, { prompt: 'Choose artist' }, class: 'form-control' %>
  <%= error_for :artist, @track.errors %>
  <br>
  <%= form.label :album_id %>
  <%= form.collection_select :album_id, Album.all, :id, :name, { prompt: 'Choose album' }, class: 'form-control' %>
  <%= error_for :album, @track.errors %>
  <br>
  <%= form.submit params[:action] == 'new' ? 'Save' : 'Update', class: 'btn btn-block btn-primary' %>
<% end %>
