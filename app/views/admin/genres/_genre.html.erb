<tr>
  <td><%= link_to genre.name, admin_genre_path(genre) %></td>
  <td>
  <div class="btn-group">
  <% if genre.user_id == current_user.id %>
    <%= link_to 'Edit', edit_admin_genre_path(genre), class: 'btn btn-sm btn-primary' %>
    <%= link_to 'Delete', admin_genre_path(genre), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger' %>
    <% else %>
        <%= link_to 'Edit', edit_admin_genre_path(genre), class: 'btn btn-sm btn-primary disabled' %>
    <%= link_to 'Delete', admin_genre_path(genre), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger disabled' %>
    <% end %>
    </div>
  </td>
</tr>