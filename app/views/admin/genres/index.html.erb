<div class="section">
  <div class="col-md-5">
    <h1>Genres <%= link_to 'Create new', new_admin_genre_path, class: 'btn btn-success' %></h1>
    <hr>

    <% unless flash[:notice].blank? %>
      <div class="alert alert-success">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>
    
    <div class="table-responsive-vertical">
      <table class="table table-hover">
      	<thead>
        	<tr>
          	<th>Name</th>
          	<th>Actions</th>
        	</tr>
      	</thead>
      	<tbody>
        	<%= render @genres %>
      	</tbody>
    	</table>
  	</div>
  </div>
</div>
